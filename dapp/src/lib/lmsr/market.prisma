model Market {
  id           String   @id
  status       MarketStatus

  qYes         Decimal
  qNo          Decimal
  b            Decimal

  collateral   Decimal

  version      Int      
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  trades       Trade[]
}

model TraderNonce {
  id        String   @id @default(uuid())
  trader    String
  marketId  String
  lastNonce BigInt  @default(0)
  updatedAt DateTime @updatedAt

  market    Market   @relation(fields: [marketId], references: [id])

  @@unique([trader, marketId])
  @@index([marketId])
}
